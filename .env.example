# Voicegain API for transcription with gender/age detection
VOICEGAIN_API_KEY=your_voicegain_api_key_here

# Text-to-Speech Provider (gemini or elevenlabs)
TTS_PROVIDER=gemini

# Google Cloud TTS (Gemini) - Primary TTS
GOOGLE_APPLICATION_CREDENTIALS=/path/to/google-credentials.json
# Or use JSON directly:
# GOOGLE_APPLICATION_CREDENTIALS_JSON={"type": "service_account", ...}

# ElevenLabs TTS - Fallback TTS (optional)
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# RapidAPI for video download
RAPIDAPI_KEY=your_rapidapi_key_here

# Database (PostgreSQL for production)
DATABASE_URL=postgresql://user:password@localhost/dbname

# Redis for Celery (optional - falls back to threading if not available)
REDIS_URL=redis://localhost:6379/0

# Cloudflare R2 Storage (optional)
CLOUDFLARE_ACCOUNT_ID=your_account_id
R2_ACCESS_KEY_ID=your_access_key
R2_SECRET_ACCESS_KEY=your_secret_key
R2_BUCKET_NAME=geyoutube-videos
R2_PUBLIC_URL=https://videos.geyoutube.com

# Flask Configuration
SECRET_KEY=your-secret-key-change-in-production
FLASK_PORT=5001

# Audio Processing Settings
ORIGINAL_AUDIO_VOLUME=0.05
VOICEOVER_VOLUME=1.0

# Transcription Settings
MAX_SPEAKERS=10
SPEAKER_MERGE_PAUSE=1.5

# Video Processing Limits
MAX_VIDEO_LENGTH=1800
MAX_FILE_SIZE=524288000
MAX_CONCURRENT_JOBS=3

# Railway Deployment Instructions:
# Add these environment variables in Railway dashboard:
# 1. Go to your geyoutube project on Railway
# 2. Click on Variables tab
# 3. Add each of these keys with their actual values
# 4. IMPORTANT: Get Voicegain API key from voicegain.ai