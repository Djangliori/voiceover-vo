# ===================================
# TTS (Text-to-Speech) Provider
# ===================================
# Choose: 'edge', 'gemini', or 'gtts'
# - edge: Microsoft Edge TTS (FREE, unlimited, male/female) [RECOMMENDED]
# - gemini: Google Gemini TTS (requires credentials)
# - gtts: Google TTS (FREE, basic)
TTS_PROVIDER=edge

# Edge TTS Settings
EDGE_TTS_VOICE=male  # 'male' or 'female'

# ===================================
# Translation API
# ===================================
# Google Gemini API (FREE, recommended)
GEMINI_API_KEY=your_gemini_api_key_here
# Get from: https://makersuite.google.com/app/apikey

# OpenAI API (PAID, alternative)
# OPENAI_API_KEY=your_openai_api_key_here

# ===================================
# Transcription
# ===================================
# Using: Local Whisper (FREE, no API needed)
# Alternative: Voicegain (with speaker diarization)
# VOICEGAIN_API_KEY=your_voicegain_jwt_token_here
# Get from: https://console.voicegain.ai

# ===================================
# Google Cloud TTS (if TTS_PROVIDER=gemini)
# ===================================
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/google-credentials.json
# Or JSON directly:
# GOOGLE_APPLICATION_CREDENTIALS_JSON={"type": "service_account", ...}

# ===================================
# Speaker Detection (Docker)
# ===================================
SPEAKER_DETECTION_URL=http://localhost:5002
# HUGGING_FACE_TOKEN=hf_your_token_here  # Optional, for better models

# ===================================
# Video Download
# ===================================
RAPIDAPI_KEY=your_rapidapi_key_here
# Get from: https://rapidapi.com/ytjar/api/youtube-mp36

# ===================================
# Database
# ===================================
# Local (SQLite)
DATABASE_URL=sqlite:///voiceover.db
# Production (PostgreSQL)
# DATABASE_URL=postgresql://user:password@localhost/dbname

# Database Connection Pooling (optional - uses defaults if not set)
# Recommended for production with multiple workers
DB_POOL_SIZE=10           # Base number of connections to keep open (default: 10)
DB_MAX_OVERFLOW=20        # Additional connections beyond pool_size (default: 20)
DB_POOL_TIMEOUT=30        # Seconds to wait for a connection (default: 30)
DB_POOL_RECYCLE=3600      # Recycle connections after N seconds (default: 3600 = 1 hour)

# Redis for Celery and distributed features (optional - falls back to in-memory if not available)
# IMPORTANT: Redis is recommended for production to enable:
# - Distributed API rate limiting across workers
# - Shared video processing status across instances
REDIS_URL=redis://localhost:6379/0

# Cloudflare R2 Storage (optional)
CLOUDFLARE_ACCOUNT_ID=your_account_id
R2_ACCESS_KEY_ID=your_access_key
R2_SECRET_ACCESS_KEY=your_secret_key
R2_BUCKET_NAME=voyoutube-videos
R2_PUBLIC_URL=https://videos.voyoutube.com

# Flask Configuration
SECRET_KEY=your-secret-key-change-in-production
FLASK_PORT=5001

# Admin User Configuration (REQUIRED for production)
# SECURITY: Never commit actual credentials to git!
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=your-secure-password-min-12-chars
ADMIN_NAME=Admin User

# Audio Processing Settings
ORIGINAL_AUDIO_VOLUME=0.05
VOICEOVER_VOLUME=1.0

# Transcription Settings
MAX_SPEAKERS=10
SPEAKER_MERGE_PAUSE=1.5

# Video Processing Limits
MAX_VIDEO_LENGTH=1800
MAX_FILE_SIZE=524288000
MAX_CONCURRENT_JOBS=3

# Railway Deployment Instructions:
# Add these environment variables in Railway dashboard:
# 1. Go to your voyoutube project on Railway
# 2. Click on Variables tab
# 3. Add each of these keys with their actual values
# 4. IMPORTANT: Get Voicegain API key from voicegain.ai
